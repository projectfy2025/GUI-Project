<Window x:Class="MotorDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MotorDashboard.Views"
        Title="Motor Monitoring Dashboard"
        Width="1300" Height="720"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Resources>
        <!-- Base style for the top nav buttons -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Thin header bar -->
            <RowDefinition Height="48"/>
            <!-- Main content -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER BAR-->
        <Border Grid.Row="0"
                Background="#252526"
                BorderBrush="#333333"
                BorderThickness="0,0,0,1">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- title -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- nav buttons -->
                    <ColumnDefinition Width="*"/>
                    <!-- spacer -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- status -->
                </Grid.ColumnDefinitions>

                <!-- App title -->
                <TextBlock Grid.Column="0"
                           Text="Motor Monitoring Dashboard"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <!-- Nav toggle (Real-time / Analytics) -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Margin="40,0,0,0"
                            VerticalAlignment="Center">
                    <!-- Keep same names so existing handlers work -->
                    <Button x:Name="BtnRealTime"
                            Content="Real-Time View"
                            Click="BtnRealTime_Click"
                            Style="{StaticResource NavButtonStyle}"
                            Background="#0078D7"
                            Margin="4,0,0,0"/>
                    <!-- active by default -->

                    <Button x:Name="BtnAnalytics"
                            Content="Analytics View"
                            Click="BtnAnalytics_Click"
                            Style="{StaticResource NavButtonStyle}"
                            Margin="4,0,0,0"/>
                </StackPanel>

                <!-- Status area on the right -->
                <StackPanel Grid.Column="3"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="4,0,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Connection:"
                                   Foreground="LightGray"
                                   FontSize="12"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text=" Simulation"
                                   Foreground="#00D7FF"
                                   FontSize="12"
                                   Margin="4,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Sampling:"
                                   Foreground="LightGray"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                        <TextBlock Text=" 10 ms"
                                   Foreground="#00D7FF"
                                   FontSize="12"
                                   Margin="4,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Status:"
                                   Foreground="LightGray"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                        <TextBlock Text=" OK"
                                   Foreground="LimeGreen"
                                   FontSize="12"
                                   Margin="4,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT AREA -->
        <Grid Grid.Row="1" Background="#1E1E1E">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="249*"/>
                <ColumnDefinition Width="11*"/>
            </Grid.ColumnDefinitions>
            <Frame x:Name="ContentFrame"
                   NavigationUIVisibility="Hidden"
                   Margin="10,10,10,10" Grid.ColumnSpan="2"/>
        </Grid>
    </Grid>
</Window>
